@{
  Layout="Shared/_Layout";
}

<div class="container">
  @if (@Model.Count == 0)
  {
    <p>No restaurants have been added yet!</p>
  }
  else
  {
    <h1>Here is your list of restaurants:</h1>
    <ul>
      @foreach (var restaurant in Model)
      {
        <li><a href="/restaurants/@restaurant.GetId()">@restaurant.GetName()</li>
      }
    </ul>
    <form action="/restaurants/clear" method="post">
      <button type="submit">Clear all restaurants</button>
    </form>
  }
  <p><a href="/restaurants/new">Add a new restaurant</a></p>
  <p><a href="/">Return home</a></p>
</div>
